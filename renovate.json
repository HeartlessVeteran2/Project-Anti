{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":maintainLockFilesWeekly",
    ":prHourlyLimitNone",
    ":prConcurrentLimitNone"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch"],
      "matchCurrentVersion": "!/^0/",
      "automerge": true,
      "labels": ["auto-merge", "dependencies"]
    },
    {
      "matchPackagePatterns": ["^androidx\\."],
      "groupName": "androidx dependencies",
      "labels": ["android", "dependencies"]
    },
    {
      "matchPackagePatterns": ["^com\\.google\\.android"],
      "groupName": "google android dependencies",
      "labels": ["android", "dependencies"]
    },
    {
      "matchPackagePatterns": ["gradle"],
      "groupName": "gradle dependencies",
      "labels": ["gradle", "dependencies"]
    },
    {
      "matchPackagePatterns": ["^kotlin"],
      "groupName": "kotlin dependencies",
      "labels": ["kotlin", "dependencies"]
    },
    {
      "matchPackageNames": ["eu.chainfire:libsuperuser"],
      "enabled": false,
      "description": "Disable libsuperuser updates as the package is not available in standard Maven repositories"
    },
    {
      "matchPackagePatterns": ["^dev\\.rikka\\.shizuku"],
      "groupName": "shizuku dependencies",
      "labels": ["android", "dependencies"]
    }
  ],
  "assignees": ["HeartlessVeteran2"],
  "schedule": ["before 3am on Monday"],
  "ignorePaths": ["**/build/**", "**/gradle/wrapper/**"],
  "prConcurrentLimit": 5
}